<h1>Reset password</h1>
<form class='d-flex flex-column w-25 m-auto bg-secondary gap-4 border rounded p-4' action='/api/auth/reset/' method='post' id='form'>
    <input class='form-control' type='password' name='password' placeholder='password' required>
    <button class='btn btn-primary'>Reestablecer</button>
</form>
<script>
    const currentPath = window.location.pathname

    const token = currentPath.split('/')[2]

    const form = document.getElementById('form')

    form.action = `/api/auth/reset/${token}`
</script>